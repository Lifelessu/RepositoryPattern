@model ViewItemModel

<div class="modal fade" id="editModalSeller" aria-labelledby="editSellerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="viewItemLabel">View Item</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="ViewItem">
                    <div class="form-group">
                        <label>FirstName</label>
                        <input asp-for="FirstName" class="form-control"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Item Name</label>
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>
                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn-danger" data-dismiss="modal">x</button>
            </div>
        </div>
    </div>
</div>